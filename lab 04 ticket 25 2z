#include <iostream>
#include <iomanip> 

int main() {
    const double conv = 2.5;
    std::cout << "Дюймы\tСантиметры\n";

    for (int inches = 1; inches <= 20; ++inches) {
        double centimeters = inches * conv; 
        std::cout << std::setw(5) << inches << "\t" << centimeters << "\n"; 
    }

    return 0;
}
